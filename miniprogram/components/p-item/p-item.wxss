  overflow: hidden;
  border: 1px solid #f6f6f6;
}

.item .pic__main {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 200%;
}

.item .pic__main .image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

